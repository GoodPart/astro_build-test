---
import Nav from "@components/Nav.astro";
import Head from "src/share/components/head/Head.astro";
import {envSrcUrl, envLinkUrl} from "../share/components/head/env";
import {theme} from "@share/style/designToken/token.json";
// import "@share/style/index.astro";

const {title} = Astro.props;
const data = Astro.locals;

const darkThemeBg = theme.dark.backgroundColor;
const darkThemeColor = theme.dark.textColor;
const lightThemeBg = theme.light.backgroundColor;
const lightThemeColor = theme.light.textColor;
const ThemeConfig = {
	darkThemeBg, darkThemeColor, lightThemeBg, lightThemeColor
}

---	

<!doctype html>
<html lang="ko">
	<Head
		title={title}
	/>	
	<body>
		<div class="wrap">
			<header>
				<div class="logo">
					<a href={envLinkUrl("/")}>
					<picture>
						<source media="(max-width : 768px)" srcset={envSrcUrl("logo2.png")}>
						<source media="(min-width : 769px)" srcset={envSrcUrl("logo.png")}>
						<img src={envSrcUrl("logo.png")} width="100px" alt="nike">
					</picture>		
					</a>		
				</div>
				<Nav />
				
			</header>
			<slot />	
			
			<footer>			
				<!-- {locals} -->
			</footer>

		</div>
	</body>
</html>

