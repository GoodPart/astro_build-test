---
import Nav from '../components/Nav.astro';
import Layout from '../layouts/Layout.astro';

	
---

<Layout>
	<div class="wrap">
		<header>
			<div class="logo">
				<picture>
					<source media="(max-width : 480px)" srcset="logo2.png">
					<source media="(min-width : 481px)" srcset="logo.png">
					<img src="logo.png" width="100" alt="nike">
				</picture>		
			</div>
			<Nav />
		</header>
		
		<div class="container">
			<div class="mainVisual">
				<div class="swiper">
					<div class="swiper-wrapper">
							<div class="swiper-slide" style="background-color: crimson;">Slide 1</div>
							<div class="swiper-slide" style="background-color: goldenrod;">Slide 2</div>
							<div class="swiper-slide" style="background-color: darkcyan;">Slide 3</div>
							<div class="swiper-slide" style="background-color: crimson;">Slide 4</div>
							<div class="swiper-slide" style="background-color: goldenrod;">Slide 5</div>
							<div class="swiper-slide" style="background-color: darkcyan;">Slide 6</div>
					</div>
					<div class="swiper-pagination"></div>

					<div class="swiper-button-prev"></div>
					<div class="swiper-button-next"></div>

				</div>
			</div>
		</div>
		<footer>
			ν‘Έν„°
		</footer>
	</div>

	<script>
		import Swiper from 'swiper';
		import { Navigation, Pagination,Autoplay } from 'swiper/modules';
		import 'swiper/css';
		import 'swiper/css/navigation';
		import 'swiper/css/pagination';
  		const swiper = new Swiper('.swiper', {	
			modules: [Navigation, Pagination, Autoplay],
			loop: true,	
			// If we need pagination
			pagination: {
				el: '.swiper-pagination',
			},
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
			centeredSlides: true,
			autoplay: {
				delay: 2500,
				disableOnInteraction: false,
			},
		});
	</script>
	
</Layout>

<style lang="scss">
	.wrap {
		width: 1200px;
		margin: 0 auto;
	}
	header {
		display: flex;
		gap: 12px;
		align-items: center;
	}
	.swiper {
		height: 400px;
	}
	.swiper-slide {
		display: flex;
		align-items: center;
		justify-content: center;
	}
</style>
