<style lang="scss">
	@use "../share/style/mixin/index.scss" as *;
	
	section {
		text-align: center;
		.section__wrap {
			margin: rem(64) 0;
			}
		p {
			margin-bottom: 8px;
			font-size: rem(16);
			line-height: rem(30);
		}
		h3 {
			font-weight: bold;
			font-size: rem(48);
		}
	}

	.image_box {
		width: 100%;
		height: 300px;
		background-color: gray;
	}
	.link_group {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: rem(12);
		margin-top: rem(24);
	}

	@media all and (max-width: 768px) {
		.link_group {
			flex-direction: column;
		}
	}
</style>