---
import {theme} from "@share/style/designToken/token.json";
const darkThemeBg = theme.dark.backgroundColor;
const darkThemeColor = theme.dark.textColor;
const lightThemeBg = theme.light.backgroundColor;
const lightThemeColor = theme.light.textColor;
const ThemeConfig = {
	darkThemeBg, darkThemeColor, lightThemeBg, lightThemeColor
}
---

<style lang="scss" is:global define:vars={ThemeConfig}>
    :root {
		--background : var(--lightThemeBg);
		--color : var(--lightThemeColor);
	}
	.dark {
		--background : var(--darkThemeBg);
		--color : var(--darkThemeColor);
	}

	html {
		background-color: var(--background);
		color : var(--color);
	}
</style>